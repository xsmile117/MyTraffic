<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="#ededed">
    <Button android:layout_height="wrap_content" android:layout_width="fill_parent" android:height="50dip" android:gravity="fill" android:id="@+id/add_button" android:background="@drawable/newcarbg_select" android:paddingLeft="6dip" android:textSize="25sp" android:text="添加车辆"></Button>
    <ListView android:layout_height="wrap_content" android:id="@+id/vehicle_listview" android:cacheColorHint="#00000000" android:layout_width="fill_parent" android:divider="@drawable/divider_bg" android:layout_weight="1"></ListView>

<TextView
    android:id="@+id/author"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="@string/soft_info" >
</TextView>
</LinearLayout>
